<h1><%= t('view.list') %></h1>

<p><%= notice %></p>

<table>
  <tr>
    <th><%= t('view.task_name') %></th>
    <th><%= t('view.content') %></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_name %></td>
    <td><%= task.detail %></td>
    <td><%= link_to t('view.detail'), task_path(task.id) %></td>
    <td><%= link_to t('view.edit'), edit_task_path(task.id) %></td>
    <td><%= link_to t('view.delete'), task_path(task.id), method: :delete ,data: { confirm: 'are you ok ?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to t('view.create_new_task'), new_task_path %>

