<%= form_with(model: @task, local: true) do |form| %>
   <% if @task.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="task_name">
    <%= form.label :name %>
    <%= form.text_field :task_name %>
  </div>
  <div class="detail">
    <%= form.label :detail %>
    <%= form.text_field :detail %>
  </div>
  <%= form.submit %>
<% end %>