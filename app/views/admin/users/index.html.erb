
<table>

<div class = new_tag>
  <button type="button" class="btn btn-outline-primary btn-sm"><%= link_to "新規ユーザ登録", new_admin_user_path %></button>
</div>

<tr>
<th><span class="badge rounded-pill bg-light text-dark"><%= "ユーザID" %></span></th>
<th><span class="badge rounded-pill bg-light text-dark"><%= "名前" %></span></th>
<th><span class="badge rounded-pill bg-light text-dark"><%= "タスク数" %></span></th>
<th><span class="badge rounded-pill bg-light text-dark"><%= "種別" %></span></th>
</tr>
 
<% @users.each do |user| %>
<tr>
  <td><%= user.id %></td>
  <td><%= user.name %></td>
  <td><%= user.tasks.count %></td>
  <td><%= user.admin ? '管理者':'一般' %></td>
  <td><button type="button" class="btn btn-outline-primary"><%= link_to t('view.detail'),  admin_user_path(user.id) %></button></td>
  <td><button type="button" class="btn btn-outline-success"><%= link_to t('view.edit'), edit_admin_user_path(user.id) %></button></td>
  <td><button type="button" class="btn btn-outline-danger"><%= link_to t('view.delete'), admin_user_path(user.id), method: :delete ,data: { confirm: 'are you ok ?' } %></button></td>
</tr>
<% end %>
</table>